<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.monte.ondb.Booking">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF015858"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Book a room"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/open"
        android:layout_width="335dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="59dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="5">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="
   *Please choose your booking type"
            android:textAlignment="center"
            android:textColor="#FF00574B"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/book"
            android:entries="@array/book_type"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="180dp"
            android:layout_height="8dp"
            android:layout_weight="1"
    android:background="@drawable/bg1"
            android:text="Submit "
            android:textColor="#fff"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/withfood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fees for no Food Service type:500L.E per month."
            android:textColor="#FF00574B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nofood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fees for  Food Service type:750L.E per month."
            android:textColor="#FF00574B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="*if you are accepted You will must submit the required files that will be sent to your mail within 2 weeks to compelet your booking process."
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/close">
        <TextView
            android:id="@+id/jj"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="booking is close now please wait until booking is open"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>


