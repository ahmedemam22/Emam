<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.monte.ondb.Adminfirst">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF015858"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My profile"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/adminlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        android:layout_centerHorizontal="true"

        android:orientation="vertical"
        android:weightSum="7">


        <ImageView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/admin" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/infoadmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin"
            android:textAlignment="center"
            android:textColor="#FF015858"
            android:textSize="36sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/agency"
                android:layout_width="100dp"
                android:layout_height="83dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/agency" />


            <Button
                android:id="@+id/addagency"
                android:layout_width="251dp"
                android:layout_height="79dp"
                android:layout_weight="1"

                android:background="@drawable/rectangle_button"
                android:fontFamily="serif"
                android:text="Add Agency"
                android:textColor="#FFFF"
                android:textSize="24sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/supervisor"
                android:layout_width="100dp"
                android:layout_height="83dp"
                android:layout_weight="1"

                app:srcCompat="@drawable/supervisor" />

            <Button
                android:id="@+id/addsuper"
                android:layout_width="251dp"
                android:layout_height="79dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_button"
                android:fontFamily="serif"
                android:text="Add Supervisor"
                android:textColor="#FFFF"
                android:textSize="24sp" />
        </LinearLayout>













    </LinearLayout>


</RelativeLayout>
